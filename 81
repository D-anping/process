#include <stdio.h>
int i,j,n;
int main()
{
	while (scanf("%d",&n)!=EOF)
	{
		for (i=1;i<=n;i++)
		{
			for (j=1;j<=(n-i);j++)
			{
				printf(" ");
			}
			for (j=1;j<=(2*i-1);j++)
			{
				printf("%d",i);
			}
			for (j=1;j<=(n-i);j++)
			{
				printf(" ");
			}
			printf("\n");
		}
		for (i=(n-1);i>=1;i--)
		{
			for (j=1;j<=(n-i);j++)
			{
				printf(" ");
			}
			for (j=1;j<=(2*i-1);j++)
			{
				printf("%d",i);
			}
			for (j=1;j<=(n-i);j++)
			{
				printf(" ");
			}
			printf("\n");
		}
		printf("\n");
	}
	return 0;
}
